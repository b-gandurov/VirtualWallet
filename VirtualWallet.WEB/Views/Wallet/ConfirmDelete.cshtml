@model WalletViewModel

<div class="transaction-area area-padding fix position-relative">
    <div class="transaction-overlay"></div>
    <div class="d-table w-100 h-100">
        <div class="d-table-cell align-middle">
            <div class="container w-50">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-sm-10 col-xs-12">
                        <div class="transaction-form bg-dark-1 p-5 rounded shadow-lg animate__animated animate__fadeIn">
                            <h4 class="transaction-title text-center text-warning mb-4">Confirm Delete Wallet</h4>

                            <div class="mb-4">
                                <h5 class="text-light">Are you sure you want to delete the following wallet?</h5>
                                <p class="text-light"><strong>Wallet Name:</strong> @Model.Name</p>
                                <p class="text-light"><strong>Wallet Type:</strong> @Model.WalletType</p>
                                <p class="text-light"><strong>Currency:</strong> @Model.Currency</p>
                                <p class="text-light"><strong>Balance:</strong> @Model.Balance</p>
                            </div>

                            <form asp-action="DeleteConfirmed" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />

                                <div class="text-center">
                                    <button type="submit" class="btn btn-danger w-100 py-2">
                                        <i class="fas fa-trash"></i> Confirm Delete
                                    </button>
                                </div>

                                <div class="text-center mt-4">
                                    <a href="@Url.Action("Index", new { id = Model.Id })" class="btn btn-outline-secondary w-50 py-2">
                                        <i class="fas fa-arrow-left"></i> Cancel
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
