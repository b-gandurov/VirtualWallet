@using VirtualWallet.WEB.Models.DTOs.WalletDTOs
@model WalletRequestDto

@{
    ViewData["Title"] = "Add Wallet";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4 animate__animated animate__fadeInDown">
        <h2 class="text-light">Add Wallet</h2>
        <a href="@Url.Action("Wallets", "User")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Wallets
        </a>
    </div>

    <div class="d-flex w-50 bg-dark-1 mx-auto rounded-3 shadow-lg p-5">
        <div class="card-body">
            <form asp-action="Add" method="post" class="form-container" id="addWalletForm">
                <div class="field-container mb-4">
                    <label asp-for="Name" class="form-label text-light">Wallet Name</label>
                    <input asp-for="Name" class="form-control bg-dark-2 text-white border-0 shadow-sm" placeholder="Enter wallet name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="field-container mb-4">
                    <label asp-for="WalletType" class="form-label text-light">Wallet Type</label>
                    <select asp-for="WalletType" class="form-select bg-dark-2 text-white border-0 shadow-sm">
                        @foreach (var walletType in Enum.GetValues(typeof(WalletType)))
                        {
                            if ((WalletType)walletType == WalletType.Main)
                            {
                                continue;
                            }
                            <option value="@walletType">@walletType</option>
                        }
                    </select>
                    <span asp-validation-for="WalletType" class="text-danger"></span>
                </div>

                <div class="field-container mb-4">
                    <label asp-for="Currency" class="form-label text-light">Currency</label>
                    <select asp-for="Currency" class="form-select bg-dark-2 text-white border-0 shadow-sm">
                        @foreach (var currency in Enum.GetValues(typeof(CurrencyType)))
                        {
                            <option value="@currency">@currency</option>
                        }
                    </select>
                    <span asp-validation-for="Currency" class="text-danger"></span>
                </div>

                <div class="d-flex gap-4 justify-content-center mb-3">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-plus-circle"></i> Submit
                    </button>
                    <button type="button" class="btn btn-outline-danger px-4" onclick="window.location.href='@Url.Action("Wallets", "User")'">
                        <i class="fas fa-times-circle"></i> Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
