@model UserViewModel

<div class="how-it-works-area py-5 bg-dark-1 text-light">
    <div class="container">
        <h1 class="text-center mb-5">Select transaction option</h1>
        <div class="d-flex justify-content-center gap-5">
            <a asp-action="DepositInternally" asp-controller="WalletTransactions" class="col-md-4">
                <div class="feature-box text-center p-3 rounded bg-dark-2 shadow">
                    <div class="feature-icon mb-2 animate__animated animate__fadeInUp">
                        <i class="bi bi-currency-exchange display-4 text-primary"></i>
                    </div>
                    <h5 class="mb-2">Internal transfer</h5>
                </div>
            </a>
            <a asp-action="SearchUsers" asp-controller="WalletTransactions" class="col-md-4">
                <div class="feature-box text-center p-3 rounded bg-dark-2 shadow">
                    <div class="feature-icon mb-2 animate__animated animate__fadeInUp">
                        <i class="bi bi-box-arrow-up-right display-4 text-primary"></i>
                    </div>
                    <h5 class="mb-2">Send Money</h5>
                </div>
            </a>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="flex-md-column gap-3 justify-content-between align-items-center mb-4 animate__animated animate__fadeInDown">
        <h3 class="text-light">My Wallets</h3>
        <a href="@Url.Action("Add", "Wallet")" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Add New Wallet
        </a>
    </div>

    <div class="row">
        @foreach (var wallet in Model.Wallets)
        {
            <div class="col-md-4 mb-4">
                <div class="card bg-dark-2 text-white h-100 shadow-sm animate__animated animate__fadeInUp">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div class="mb-4">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-wallet2 display-4 text-success me-3"></i>
                                <div>
                                    <h5 class="card-title mb-1">@wallet.Name</h5>
                                    <h6 class="card-subtitle text-muted">@wallet.Balance @wallet.Currency</h6>
                                </div>
                            </div>
                            <p class="card-text">Wallet Type: <span class="fw-bold">@wallet.WalletType</span></p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Wallet", new { id = wallet.Id })" class="btn btn-outline-primary w-45">
                                <i class="bi bi-eye"></i> View Wallet
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (!Model.Wallets.Any())
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> You have no wallets yet. <a href="@Url.Action("Add", "Wallet")" class="alert-link">Create one now!</a>
                </div>
            </div>
        }
    </div>
</div>
