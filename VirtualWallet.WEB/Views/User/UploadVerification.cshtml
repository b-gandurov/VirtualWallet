@model VerificationViewModel

@{
    ViewData["Title"] = "Upload Verification Documents";
}

<div class="verification-area area-padding fix mt-5">
    <div class="d-table w-100 h-100">
        <div class="d-table-cell align-middle">
            <div class="container w-50">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-sm-10 col-xs-12">
                        <div class="verification-form bg-dark-1 p-5 rounded shadow animate__animated animate__fadeIn">
                            <h4 class="text-center mb-4 text-warning">Identity Verification</h4>
                            <p class="text-center text-light mb-4">
                                To ensure the safety and security of our platform, we require all users to verify their identity. This verification process allows us to provide you with full access to all our services. Your personal information is encrypted and securely stored in compliance with the highest industry standards. Please upload the following documents to complete your verification:
                            </p>
                            <form asp-action="UploadVerificationDocuments" method="post" enctype="multipart/form-data">
                                <div class="mb-4">
                                    <label asp-for="PhotoId" class="form-label text-light">Upload Photo ID</label>
                                    <input asp-for="PhotoId" type="file" class="form-control" />
                                    <span asp-validation-for="PhotoId" class="text-danger"></span>
                                </div>
                                <div class="mb-4">
                                    <label asp-for="LicenseId" class="form-label text-light">Upload License ID</label>
                                    <input asp-for="LicenseId" type="file" class="form-control" />
                                    <span asp-validation-for="LicenseId" class="text-danger"></span>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-success w-100">Submit</button>
                                </div>
                                <div class="text-center mt-4">
                                    <div class="acc-not">
                                        <small class="text-white">Please ensure your documents are clear and readable. Verification is typically completed within 24-48 hours.</small>
                                    </div>
                                    <div class="mt-3">
                                        <a href="@Url.Action("Index", "Home")" class="text-muted">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
