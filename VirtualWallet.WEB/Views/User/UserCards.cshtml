@model UserViewModel

<div class="container my-5">
    <div class="flex-md-column gap-3 justify-content-between align-items-center mb-4 animate__animated animate__fadeInDown">
        <h3 class="text-light">My Cards</h3>
        <a href="@Url.Action("AddCard", "Card", new { userId = Model.Id })" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Add New Card
        </a>
    </div>

    <div class="row">
        @foreach (var card in Model.Cards)
        {
            <div class="col-md-4 mb-4">
                <div class="card bg-dark-3 text-white h-100 shadow-sm animate__animated animate__fadeInUp">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div class="mb-4">
                            <div class="d-flex align-items-center justify-content-center mb-3">
                                <i class="bi bi-credit-card-2-front display-4 text-info me-3"></i>
                                <div>
                                    <h5 class="card-title mb-1">@card.Name</h5>
                                    <h3 class="card-subtitle">**** **** **** @card.CardNumber.Substring(card.CardNumber.Length - 4)</h3>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-2">
                                <div>
                                    <p class="card-text me-2 mb-0">Expiry: <span class="fw-bold">@card.ExpirationDate</span></p>
                                    <p class="card-text me-2 mb-0">Currency: <span class="fw-bold">@card.Currency</span></p>
                                    <p class="card-text">Issuer: <span class="fw-bold">@card.Issuer</span></p>
                                </div>
                                <img src="" alt="Issuer Logo" class="issuer-logo ms-auto" data-issuer="@card.Issuer" style="width: 100px; height: auto;">
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "CardTransactions", new { cardId = card.Id })" class="btn btn-outline-secondary w-45 text-white">
                                <i class="bi bi-clock-history"></i> View Transactions
                            </a>
                            <a href="@Url.Action("DeleteCard", "Card", new { cardId = card.Id })" class="btn btn-outline-danger w-45">
                                <i class="bi bi-trash"></i> Remove
                            </a>
                        </div>
                    </div>
                </div>
            </div>


        }
        @if (!Model.Cards.Any())
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> You have no cards yet. <a href="@Url.Action("AddCard", "Card", new { userId = Model.Id })" class="alert-link">Add a new card now!</a>
                </div>
            </div>
        }
    </div>
</div>






