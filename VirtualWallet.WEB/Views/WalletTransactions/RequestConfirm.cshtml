@model RequestMoneyViewModel

<div class="transaction-area area-padding fix position-relative mt-5">
    <div class="transaction-overlay"></div>
    <div class="d-table w-100 h-100">
        <div class="d-table-cell align-middle">
            <div class="container w-50">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-sm-10 col-xs-12">
                        <div class="transaction-form bg-dark-1 p-5 rounded shadow-lg animate__animated animate__fadeIn">
                            <h4 class="transaction-title text-center text-warning mb-4">Confirm Request Details</h4>

                            <form asp-action="RequestSend" method="post">
                                <div class="mb-4">
                                    <label class="form-label text-light">Sender</label>
                                    <input class="form-control bg-dark-2 text-white border-0 shadow-sm" value="@Model.Contacts.FirstOrDefault()?.Contact.Username (@Model.Contacts.FirstOrDefault()?.Contact.Email)" readonly />
                                    <input type="hidden" name="SenderId" value="@Model.SenderId" />
                                </div>

                                <div class="mb-4">
                                    <label class="form-label text-light">Amount</label>
                                    <input class="form-control bg-dark-2 text-white border-0 shadow-sm" value="@Model.Amount" readonly />
                                    <input type="hidden" name="Amount" value="@Model.Amount" />
                                </div>

                                <div class="mb-4">
                                    <label class="form-label text-light">Description</label>
                                    <input class="form-control bg-dark-2 text-white border-0 shadow-sm" value="@Model.Description" readonly />
                                    <input type="hidden" name="Description" value="@Model.Description" />
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-success w-100 py-2">
                                        <i class="fas fa-check"></i> Confirm and Send Request
                                    </button>
                                </div>
                            </form>

                            <div class="text-center mt-4">
                                <a href="@Url.Action("RequestDeposit", "WalletTransactions", new { SenderId = Model.SenderId, Amount = Model.Amount, Description = Model.Description })" class="btn btn-outline-secondary w-50 py-2">
                                    <i class="fas fa-arrow-left"></i> Go Back to Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
