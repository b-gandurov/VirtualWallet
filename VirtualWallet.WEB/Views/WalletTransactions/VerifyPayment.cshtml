@using VirtualWallet.WEB.Models.ViewModels.WalletViewModels
@model WalletTransactionViewModel

@{
    ViewData["Title"] = "Verify Payment";
    dynamic amountSent = decimal.Round(Model.AmountSent, 2, MidpointRounding.AwayFromZero);
}

<div class="transaction-area area-padding fix position-relative">
    <div class="transaction-overlay"></div>
    <div class="d-table w-100 h-100">
        <div class="d-table-cell align-middle">
            <div class="container w-50">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-sm-10 col-xs-12">
                        <div class="d-flex flex-column justify-content-center align-items-center text-center transaction-form bg-dark-1 p-5 rounded shadow-lg animate__animated animate__fadeIn">
                            <div class="progress mb-4" style="width: 100%; height: 1.5rem; background-color: #2c2f33; border-radius: 10px; overflow: hidden; position: relative;">
                                <div class="progress-bar bg-success text-dark fw-bold text-left" role="progressbar" style="width: 50%; font-size: 1rem; line-height: 1.5rem; padding-left: 10px;">
                                    Step 1
                                </div>
                                <div class="progress-bar bg-warning text-dark fw-bold text-right" role="progressbar" style="width: 50%; background-color: #2c2f33; font-size: 1rem; line-height: 1.5rem; padding-right: 10px;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                    Step 2
                                </div>
                            </div>

                            <h3 class="text-warning mb-4">Verify Payment</h3>

                            <div class="mb-3 p-1 border rounded bg-dark-2 w-100">
                                <h5 class="text-muted">Amount:</h5>
                                <h3 class="fw-bold text-white">@amountSent @Model.CurrencySent</h3>
                            </div>

                            <div class="mb-3 p-1 border rounded bg-dark-2 w-100">
                                <h5 class="text-muted">From:</h5>
                                <h3 class="fw-bold text-white">@Model.Sender.User.Username</h3>
                            </div>

                            <div class="mb-3 p-1 border rounded bg-dark-2 w-100">
                                <h5 class="text-muted">To:</h5>
                                <h3 class="fw-bold text-white">@Model.Recipient.User.Username</h3>
                            </div>

                            <form asp-action="VerifyPayment" asp-controller="WalletTransactions" method="post" class="w-100">
                                <input asp-for="Id" hidden value="@Model.Id"></>
                                <input asp-for="CreatedAt" hidden value="@Model.CreatedAt"></>
                                <input asp-for="SenderId" hidden value="@Model.Sender.Id"></>
                                <input asp-for="RecipientId" hidden value="@Model.Recipient.Id"></>
                                <input asp-for="CurrencyReceived" hidden value="@Model.CurrencyReceived"></>
                                <input asp-for="CurrencySent" hidden value="@Model.CurrencySent"></>
                                <input asp-for="AmountReceived" hidden value="@Model.AmountReceived"></>
                                <input asp-for="AmountSent" hidden value="@Model.AmountSent"></>
                                <input asp-for="Status" hidden value="@Model.Status"></>

                                <div class="mb-3 p-1 border rounded bg-dark-2 w-100">
                                    <h5 class="text-muted">Verification Code:</h5>
                                    <input asp-for="VerificationCode" class="form-control text-center fw-bold" type="text" placeholder="Enter Verification Code" />
                                </div>

                                <div class="mt-4 d-flex justify-content-center">
                                    <button type="submit" class="btn btn-success btn-lg me-2">
                                        <i class="fas fa-check"></i> Verify
                                    </button>
                                </div>
                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
