@model RequestMoneyViewModel


<div class="transaction-area area-padding fix position-relative mt-5">
    <div class="transaction-overlay"></div>
    <div class="d-table w-100 h-100">
        <div class="d-table-cell align-middle">
            <div class="container w-50">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-sm-10 col-xs-12">
                        <div class="transaction-form bg-dark-1 p-5 rounded shadow-lg animate__animated animate__fadeIn">
                            <h4 class="transaction-title text-center text-warning mb-4">Request Money</h4>

                            <form asp-action="RequestConfirm" method="get">
                                <div class="mb-4">
                                    <label class="form-label text-light" for="input-from">Sender (Username/Email)</label>
                                    <select class="form-select bg-dark-2 text-white border-0 shadow-sm" id="input-from" name="SenderId" required>
                                        <option value="">Select a Contact</option>
                                        @foreach (var contact in Model.Contacts)
                                        {
                                            <option value="@contact.Contact">@contact.Contact.Username (@contact.Contact.Email)</option>
                                        }
                                    </select>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label text-light" for="input-amount">Amount</label>
                                    <input class="form-control bg-dark-2 text-white border-0 shadow-sm" id="input-amount" name="Amount" type="number" step="0.01" required />
                                </div>

                                <div class="mb-4">
                                    <label class="form-label text-light" for="input-description">Description</label>
                                    <input class="form-control bg-dark-2 text-white border-0 shadow-sm" id="input-description" name="Description" required />
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-success w-100 py-2">
                                        <i class="fas fa-check"></i> Submit
                                    </button>
                                </div>
                            </form>

                            <div class="text-center mt-4">
                                <a href="@Url.Action("Index", "WalletTransactions")" class="btn btn-outline-secondary w-50 py-2">
                                    <i class="fas fa-arrow-left"></i> Back to Transactions
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


