@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="login-area area-padding fix mt-5">
    <div class="login-overlay"></div>
    <div class="d-table w-100 h-100">
        <div class="d-table-cell align-middle">
            <div class="container w-50">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-sm-8 col-xs-12">
                        <div class="login-form bg-dark-1 p-5 rounded shadow animate__animated animate__fadeIn">
                            <h4 class="login-title text-center mb-4">LOGIN</h4>
                            <form asp-action="Login" method="post" id="loginForm" class="log-form">
                                <div class="mb-4">
                                    <input asp-for="UsernameOrEmail" class="form-control" placeholder="Username or Email" required />
                                    <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                                </div>
                                <div class="mb-4">
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Password" required />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="rememberMe">
                                        <label class="form-check-label" for="rememberMe">Remember me</label>
                                    </div>
                                    <a class="text-white" href="@Url.Action("ForgotPassword", "Authentication")">Forgot password?</a>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-outline-success w-100">Login</button>
                                    <span asp-validation-for="CustomError" class="text-danger mt-2 d-block"></span>
                                </div>
                                <div class="text-center mt-4">
                                    <hr />
                                    <div class="sign-icon mt-3">
                                        <a class="btn btn-outline-danger d-flex justify-content-center" href="@Url.Action("GoogleLogin", "Authentication")">
                                            Sign in with Google
                                        </a>
                                    </div>
                                </div>
                                <div class="text-center mt-4">
                                    <div class="acc-not">
                                        Don't have an account?
                                        <a href="@Url.Action("Register", "Authentication")" class="ms-1">Sign up</a>
                                    </div>
                                    <div class="mt-3">
                                        <a href="@Url.Action("Index", "Home")" class="text-muted">Cancel</a>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>