@model ResetPasswordViewModel

<div class="reset-password-area area-padding fix mt-5">
    <div class="d-table w-100 h-100">
        <div class="d-table-cell align-middle">
            <div class="container w-50">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-sm-8 col-xs-12">
                        <div class="reset-password-form bg-dark-1 p-5 rounded shadow animate__animated animate__fadeIn">
                            <h4 class="text-center mb-4">Reset Password</h4>

                            <form asp-action="ResetPassword" method="post" class="log-form">
                                <input type="hidden" asp-for="Token" />
                                <input type="hidden" asp-for="Email" />

                                <div class="mb-4">
                                    <input asp-for="Password" class="form-control" type="password" placeholder="New Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="mb-4">
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm New Password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="text-center mt-4">
                                    <button type="submit" class="btn btn-outline-success w-100">Reset Password</button>
                                </div>
                            </form>

                            <div class="text-center mt-4">
                                <a href="@Url.Action("Login", "Authentication")" class="text-muted">Back to Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
