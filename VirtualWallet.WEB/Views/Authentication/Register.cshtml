@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="register-area area-padding fix mt-5">
    <div class="d-table w-100 h-100">
        <div class="d-table-cell align-middle">
            <div class="container w-50">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-sm-8 col-xs-12">
                        <div class="register-form bg-dark-1 p-5 rounded shadow animate__animated animate__fadeIn">
                            <h4 class="text-center mb-4">Create Your Account</h4>
                            <form asp-action="Register" method="post">
                                <div class="mb-4">
                                    <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="mb-4">
                                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="mb-4">
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="mb-4">
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-outline-success w-100">Register</button>
                                </div>
                                <div class="text-center mt-4">
                                    <hr />
                                    <a href="@Url.Action("GoogleRegister", "Authentication")" class="btn btn-outline-danger w-100">
                                        <i class="fab fa-google"></i> Register with Google
                                    </a>
                                </div>
                                <div class="text-center mt-4">
                                    <div class="acc-not">
                                        Already have an account?
                                        <a href="@Url.Action("Login", "Authentication")" class="ms-1">Login</a>
                                    </div>
                                    <div class="mt-3">
                                        <a href="@Url.Action("Index", "Home")" class="text-muted">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
