@model bool

@{
    ViewData["Title"] = "Email Verification";
}

<div class="verification-area area-padding fix mt-5">
    <div class="verification-overlay"></div>
    <div class="d-table w-100 h-100">
        <div class="d-table-cell align-middle">
            <div class="container w-50">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-sm-8 col-xs-12">
                        <div class="verification-form bg-dark-1 p-5 rounded shadow animate__animated animate__fadeIn">
                            @if (Model)
                            {
                                <h4 class="text-success text-center">
                                    <i class="fas fa-check-circle"></i> Email Verification Successful
                                </h4>
                                <p class="mt-3 text-center">Thank you for verifying your email address. Your account is now activated.</p>
                                <div class="text-center mt-4">
                                    <a href="@Url.Action("Profile", "User")" class="btn btn-success w-100">
                                        <i class="fas fa-home"></i> Checkout your profile!
                                    </a>
                                </div>
                            }
                            else
                            {
                                <h4 class="text-danger text-center">
                                    <i class="fas fa-exclamation-triangle"></i> Email Verification Failed
                                </h4>
                                <p class="mt-3 text-center">We were unable to verify your email address. Please try again later or contact support.</p>
                                <div class="text-center mt-4">
                                    <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-envelope"></i> Contact Support
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
